<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cziczarito.klientandroid.Menu">

    <EditText
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:id="@+id/IPinput"
        android:text="192.168.1.101"
        android:layout_gravity="center_vertical" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PortInput"

        android:inputType="text"

        android:layout_below="@+id/IPinput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="164dp"
        android:layout_marginEnd="164dp"
        android:layout_alignRight="@+id/IPinput"
        android:layout_alignEnd="@+id/IPinput"
        android:text="1092" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IdÅº"
        android:id="@+id/przycisk"
        android:layout_below="@+id/IPinput"
        android:layout_alignRight="@+id/IPinput"
        android:layout_alignEnd="@+id/IPinput"
        android:layout_marginLeft="244dp"
        android:layout_marginStart="244dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="przyciskOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/rec"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageSwitcher
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageSwitcher"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp" />

</RelativeLayout>
